@model CRUDPerson.Models.Person;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar cadastro Pessoa</h1>

<!-- formulário HTML com Tag Helpers-->
<form asp-action="Update" asp-controller="Person" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-horizontal">
        <hr />

        <div class="form-group mb-2">
            <label>Nome</label>
            <div class="col-md-10">
                <!-- Caixa de Texto -->
                <input asp-for="Name" class="form-control col-md-4" />
            </div>
        </div>

        <div class="form-group mb-2">
            <label>Endereço</label>
            <div class="col-md-10">
                <!-- Caixa de Texto -->
                <input asp-for="Address" class="form-control col-md-4" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-sm btn-outline-danger"
                       type="reset" value="Limpar" />
                <!-- HTML Simple para envio dos dados do formulário -->
                <input class="btn btn-sm btn-outline-success"
                       type="submit" value="Gravar Alteração" />
            </div>
        </div>
        <hr />
    </div>
</form>

<div>
    <a class="btn btn-sm btn-outline-secondary"
       asp-controller="Person" asp-action="Index">Voltar</a>
</div>

<br />
